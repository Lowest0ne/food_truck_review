<% @review.errors.full_messages.each do | error | %>
  <%= content_tag :p, error %>
<% end %>

<%= simple_form_for([@truck, @review]) do |f| %>
  <%= f.input :body %>
  <%= f.collection_radio_buttons :voted_up, [[true, 'Good'], [false, 'Bad']], :first, :last %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Cancel', food_truck_reviews_path(@truck) %>

